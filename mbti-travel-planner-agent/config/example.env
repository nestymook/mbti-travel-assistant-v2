# MBTI Travel Planner Agent - HTTP Gateway Integration
# Example Environment Configuration
# Copy this file and customize for your deployment environment

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Deployment environment (development, staging, production)
ENVIRONMENT=development

# AWS region for all services
AWS_REGION=us-east-1

# =============================================================================
# GATEWAY HTTP CLIENT CONFIGURATION
# =============================================================================

# Gateway base URL (leave empty to use environment defaults)
# Development: http://localhost:8080
# Staging: https://agentcore-gateway-mcp-tools-staging.bedrock-agentcore.us-east-1.amazonaws.com
# Production: https://agentcore_gateway_mcp_tools-UspJsMG7Fi.bedrock-agentcore.us-east-1.amazonaws.com
GATEWAY_BASE_URL=

# HTTP request timeout in seconds
GATEWAY_TIMEOUT=30

# Maximum retry attempts for failed requests
GATEWAY_MAX_RETRIES=2

# Whether gateway authentication is required
GATEWAY_AUTH_REQUIRED=false

# Authentication token (required if GATEWAY_AUTH_REQUIRED=true)
GATEWAY_AUTH_TOKEN=

# HTTP connection pool configuration
GATEWAY_CONNECTION_POOL_SIZE=10
GATEWAY_KEEP_ALIVE_TIMEOUT=30

# Health check endpoint
GATEWAY_HEALTH_CHECK_ENDPOINT=/health

# =============================================================================
# AGENT MODEL CONFIGURATION (NOVA PRO)
# =============================================================================

# Amazon Bedrock foundation model
AGENT_MODEL=amazon.nova-pro-v1:0

# Model temperature (0.0-1.0, lower = more focused)
AGENT_TEMPERATURE=0.1

# Maximum tokens for responses
AGENT_MAX_TOKENS=2048

# Agent processing timeout in seconds
AGENT_TIMEOUT=60

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file directory
LOG_DIR=./logs

# Enable file logging
ENABLE_FILE_LOGGING=true

# Enable JSON-formatted logs (recommended for production)
ENABLE_JSON_LOGGING=false

# Enable structured logging with additional context
ENABLE_STRUCTURED_LOGGING=true

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=300

# Enable background health monitoring
ENABLE_BACKGROUND_HEALTH_CHECKS=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# HTTP client connection pool settings
HTTP_CLIENT_POOL_CONNECTIONS=10
HTTP_CLIENT_POOL_MAXSIZE=10
HTTP_CLIENT_MAX_KEEPALIVE_CONNECTIONS=5

# =============================================================================
# MONITORING CONFIGURATION (STAGING/PRODUCTION)
# =============================================================================

# Enable performance metrics collection
ENABLE_PERFORMANCE_MONITORING=false

# Enable HTTP request tracing
ENABLE_REQUEST_TRACING=false

# Enable comprehensive metrics collection (production only)
ENABLE_METRICS_COLLECTION=false

# =============================================================================
# SECURITY CONFIGURATION (PRODUCTION)
# =============================================================================

# Enable strict request validation
ENABLE_REQUEST_VALIDATION=false

# Enable strict response validation
ENABLE_RESPONSE_VALIDATION=false

# =============================================================================
# DEPLOYMENT EXAMPLES
# =============================================================================

# For local development:
# ENVIRONMENT=development
# LOG_LEVEL=DEBUG
# GATEWAY_AUTH_REQUIRED=false
# ENABLE_JSON_LOGGING=false

# For staging deployment:
# ENVIRONMENT=staging
# LOG_LEVEL=INFO
# GATEWAY_AUTH_REQUIRED=true
# GATEWAY_AUTH_TOKEN=your-staging-jwt-token
# ENABLE_JSON_LOGGING=true
# ENABLE_PERFORMANCE_MONITORING=true

# For production deployment:
# ENVIRONMENT=production
# LOG_LEVEL=INFO
# GATEWAY_AUTH_REQUIRED=true
# GATEWAY_AUTH_TOKEN=your-production-jwt-token
# ENABLE_JSON_LOGGING=true
# ENABLE_PERFORMANCE_MONITORING=true
# ENABLE_METRICS_COLLECTION=true
# ENABLE_REQUEST_VALIDATION=true
# ENABLE_RESPONSE_VALIDATION=true