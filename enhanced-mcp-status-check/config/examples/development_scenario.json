{
  "enhanced_status_check_system": {
    "dual_monitoring_enabled": true,
    "global_settings": {
      "check_interval_seconds": 5,
      "max_concurrent_checks": 5,
      "retry_attempts": 2,
      "circuit_breaker_enabled": true
    },
    "servers": [
      {
        "server_name": "local-restaurant-search",
        "mcp_endpoint_url": "http://localhost:8080/mcp",
        "rest_health_endpoint_url": "http://localhost:8080/status/health",
        "mcp_enabled": true,
        "mcp_timeout_seconds": 10,
        "mcp_expected_tools": [
          "search_restaurants_by_district",
          "search_restaurants_by_meal_type",
          "recommend_restaurants"
        ],
        "mcp_retry_attempts": 2,
        "rest_enabled": true,
        "rest_timeout_seconds": 8,
        "rest_retry_attempts": 2,
        "auth_headers": {
          "X-API-Key": "${DEV_API_KEY}",
          "User-Agent": "Enhanced-MCP-Status-Check-Dev/1.0"
        },
        "mcp_priority_weight": 0.5,
        "rest_priority_weight": 0.5,
        "require_both_success": false
      },
      {
        "server_name": "local-reasoning-service",
        "mcp_endpoint_url": "http://localhost:8081/mcp",
        "rest_health_endpoint_url": "http://localhost:8081/status/health",
        "mcp_enabled": true,
        "mcp_timeout_seconds": 15,
        "mcp_expected_tools": [
          "analyze_restaurant_results",
          "generate_recommendations"
        ],
        "rest_enabled": true,
        "rest_timeout_seconds": 10,
        "auth_headers": {
          "X-API-Key": "${DEV_API_KEY}"
        },
        "mcp_priority_weight": 0.6,
        "rest_priority_weight": 0.4
      }
    ],
    "mcp_health_checks": {
      "enabled": true,
      "default_timeout_seconds": 10,
      "tools_list_validation": true,
      "expected_tools_validation": true,
      "json_rpc_version": "2.0",
      "connection_pool_size": 3,
      "keep_alive_enabled": true,
      "retry_policy": {
        "max_attempts": 2,
        "backoff_multiplier": 1.5,
        "initial_delay_seconds": 0.5
      }
    },
    "rest_health_checks": {
      "enabled": true,
      "default_timeout_seconds": 8,
      "health_endpoint_path": "/status/health",
      "metrics_endpoint_path": "/status/metrics",
      "expected_status_codes": [200],
      "connection_pool_size": 5,
      "retry_policy": {
        "max_attempts": 2,
        "backoff_multiplier": 1.2,
        "initial_delay_seconds": 0.3
      }
    },
    "result_aggregation": {
      "mcp_priority_weight": 0.5,
      "rest_priority_weight": 0.5,
      "require_both_success_for_healthy": false,
      "degraded_on_single_failure": true,
      "health_score_calculation": "weighted_average",
      "failure_threshold_percentage": 50
    },
    "authentication": {
      "jwt_enabled": false,
      "api_key_header": "X-API-Key",
      "token_refresh_enabled": false,
      "custom_headers": {
        "User-Agent": "Enhanced-MCP-Status-Check-Dev/1.0",
        "X-Environment": "development"
      }
    },
    "circuit_breaker": {
      "enabled": true,
      "failure_threshold": 3,
      "success_threshold": 2,
      "timeout_seconds": 30,
      "half_open_max_calls": 2
    },
    "metrics_collection": {
      "enabled": true,
      "collection_interval_seconds": 10,
      "max_history_entries": 100,
      "cleanup_interval_seconds": 300
    },
    "observability": {
      "logging_level": "DEBUG",
      "debug_mode": true,
      "request_response_logging": true,
      "metrics_enabled": true,
      "prometheus_enabled": true,
      "health_check_endpoint": "/health",
      "metrics_endpoint": "/metrics"
    }
  }
}